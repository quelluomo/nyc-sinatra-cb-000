<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmark/<%= @landmark.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"> <br><br>
  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed.to_s %>>

  <input type="submit" value="Create New Landmark">
</form>

